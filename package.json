{
  "name": "react-boilerplate",
  "version": "1.1.0",
  "description": "Boilerplate fo react application",
  "main": "index.js",
  "author": "Sergei Korepanov",
  "license": "MIT",
  "scripts": {
    "build:dev": "cross-env NODE_ENV=development webpack",
    "build": "cross-env NODE_ENV=production webpack",
    "start": "cross-env NODE_ENV=development webpack-dev-server",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx src",
    "lint:dump": "eslint --print-config ./.eslintrc.json",
    "stylelint": "stylelint src/**/*.css",
    "test": "tsc --noEmit && yarn lint && yarn stylelint"
  },
  "devDependencies": {
    "@types/history": "4.7.5",
    "@types/react": "16.9.19",
    "@types/react-dom": "16.9.5",
    "@types/react-redux": "7.1.7",
    "@types/react-router": "5.1.4",
    "@typescript-eslint/eslint-plugin": "2.18.0",
    "@typescript-eslint/parser": "2.18.0",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "5.1.1",
    "cross-env": "7.0.0",
    "css-loader": "3.4.2",
    "eslint": "6.8.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.18.2",
    "eslint-plugin-react-hooks": "2.3.0",
    "eslint-plugin-sonarjs": "0.5.0",
    "html-webpack-plugin": "3.2.0",
    "husky": "4.2.1",
    "lint-staged": "10.0.7",
    "mini-css-extract-plugin": "0.9.0",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "postcss": "7.0.26",
    "postcss-import": "12.0.1",
    "postcss-loader": "3.0.0",
    "postcss-nested": "4.2.1",
    "postcss-preset-env": "6.7.0",
    "redux-saga": "1.1.3",
    "source-map-loader": "0.2.4",
    "stylelint": "13.0.0",
    "stylelint-webpack-plugin": "1.2.1",
    "terser-webpack-plugin": "2.3.4",
    "ts-loader": "6.2.1",
    "typescript": "3.7.5",
    "vfile-message": "2.0.2",
    "webpack": "4.41.5",
    "webpack-cli": "3.3.10",
    "webpack-dev-server": "3.10.1"
  },
  "dependencies": {
    "bem-react-classname": "1.1.0",
    "connected-react-router": "6.6.1",
    "history": "4.10.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-redux": "7.1.3",
    "react-router": "5.1.2",
    "redux": "4.0.5"
  },
  "lint-staged": {
    "src/**/*.(js|jsx|ts|tsx)": "yarn lint",
    "*.css": "yarn stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  }
}
